{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "apps/shortlinks-resolver/src",
    "compilerOptions": {
        "deleteOutDir": true,
        "webpack": true,
        "tsConfigPath": "apps/shortlinks-resolver/tsconfig.app.json"
    },
    "monorepo": true,
    "root": "apps/api-gateway",
    "projects": {
        "analytics": {
            "type": "application",
            "root": "apps/analytics",
            "entryFile": "main",
            "sourceRoot": "apps/analytics/src",
            "compilerOptions": {
                "tsConfigPath": "apps/analytics/tsconfig.app.json"
            }
        },
        "shortlinks-resolver": {
            "type": "application",
            "root": "apps/shortlinks-resolver",
            "entryFile": "main",
            "sourceRoot": "apps/shortlinks-resolver/src",
            "compilerOptions": {
                "tsConfigPath": "apps/shortlinks-resolver/tsconfig.app.json"
            }
        },
        "users": {
            "type": "application",
            "root": "apps/users",
            "entryFile": "main",
            "sourceRoot": "apps/users/src",
            "compilerOptions": {
                "tsConfigPath": "apps/users/tsconfig.app.json"
            }
        }
    }
}
